{
  "name": "Noise",
  "description": "__MSG_extDescription__",
  "version": "3.0.0",
  "homepage_url": "https://github.com/bootleq/noise",
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "manifest_version": 3,

  "permissions": [
    "storage",
    "downloads"
  ],
  "optional_permissions": [
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["content.js.map"],
    "matches": ["<all_urls>"]
  }],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "default_locale": "en",
  "minimum_chrome_version": "76"
}
